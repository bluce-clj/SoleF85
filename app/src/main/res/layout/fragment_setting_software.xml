<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFFFFF"
    tools:context=".settings.SettingSoftwareFragment" >

    <TextView
        style="@style/NormalTitleText2"
        android:id="@+id/software_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/software_title" />

    <ImageView
        android:contentDescription="@string/img"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:id="@+id/ivTopLine_Programs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_full_screen_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/software_title" />

    <TextView
        android:letterSpacing="0.07"
        android:fontFamily="@font/hanzel_bold"
        android:gravity="center"
        android:textColor="@color/color597084"
        android:textSize="40sp"
        android:text=""
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/software_title"
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/color162735"
        android:id="@+id/tv_UpdateText"
        android:textSize="26sp"
        android:text="Your software version is the latest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version_text"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/back"
        style="@style/NormalButton"
        android:layout_marginBottom="200dp"
        android:background="@drawable/btn_rrect_e6e6e6_184"
        android:text="Back"
        android:textColor="@color/color597084"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:visibility="invisible"
        android:id="@+id/back2"
        style="@style/NormalButton"
        android:layout_marginBottom="200dp"
        android:background="@drawable/btn_rrect_e6e6e6_184"
        android:text="Back"
        android:textColor="@color/color597084"
        android:layout_marginStart="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:visibility="invisible"
        android:id="@+id/bt_update"
        style="@style/NormalButton"
        android:layout_marginBottom="200dp"
        android:background="@drawable/btn_rrect_9d2227_184"
        android:text="Update"
        android:textColor="@color/colorFFFFFF"
        android:layout_marginEnd="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>