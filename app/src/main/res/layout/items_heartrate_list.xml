<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="113dp"
    android:id="@+id/cl_base"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:contentDescription="@string/img"
        android:id="@+id/iv_done"
        android:layout_marginEnd="713dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="543dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/tv_wifi_name"
        android:textSize="26sp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/colorE4002B"
        android:layout_marginTop="40dp"
        android:layout_marginStart="583dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_connect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="32dp"/>

    <TextView
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_bold"
        android:lineSpacingExtra="1.5sp"
        android:letterSpacing="0.14062"
        android:text="Connect"
        android:clickable="true"
        android:background="@drawable/panel_box2"
        android:id="@+id/tv_connect"
        android:textColor="@color/colorB4BEC7"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="169dp"
        android:layout_height="64dp"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorE6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>