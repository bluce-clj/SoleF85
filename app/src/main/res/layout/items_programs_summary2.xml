<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1120dp"
        android:layout_height="272dp"
        android:background="@drawable/bg_summary_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:letterSpacing="0.14062"
            android:layout_width="392dp"
            android:layout_height="24dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="LEVEL PROFILE"
            android:textColor="@color/color597084"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_diagram_level"
            android:scaleType="fitXY"
            android:layout_marginStart="104dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="496dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/tv_v2_avg_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="728dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="10"
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_total_speed_unit1"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="47dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_v2_avg_level"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="AVG LEVEL"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v2_avg_level"
            app:layout_constraintTop_toBottomOf="@+id/tv_v2_avg_level" />

        <TextView
            android:id="@+id/tv_v2_max_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="158dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="23"
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v2_avg_level"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_total_speed_unit2"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="159dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_v2_max_level"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="MAX LEVEL"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v2_max_level"
            app:layout_constraintTop_toBottomOf="@+id/tv_v2_max_level" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>