<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clAvatarIcon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newprofile.AvatarIconFragment">

    <ImageView
        android:id="@+id/ivPageIndex_AvatarIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/element_pagination_profile_sole_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btClose_AvatarIcon"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/btn_round_close_e6e6e6_64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/NormalTitleText"
        android:id="@+id/tvTitle_AvatarIcon"
        android:text="@string/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg_avatar"
        android:layout_width="800dp"
        android:layout_height="320dp"
        android:layout_marginTop="228dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/rgUp_AvatarIcon"
            android:layout_width="800dp"

            android:layout_height="160dp"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/rbAvatar01_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar01" />

            <RadioButton
                android:id="@+id/rbAvatar02_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar02" />

            <RadioButton
                android:id="@+id/rbAvatar03_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar03" />

            <RadioButton
                android:id="@+id/rbAvatar04_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar04" />

            <RadioButton
                android:id="@+id/rbAvatar05_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar05" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgDown_AvatarIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAvatar06_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar06" />

            <RadioButton
                android:id="@+id/rbAvatar07_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar07" />

            <RadioButton
                android:id="@+id/rbAvatar08_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar08" />

            <RadioButton
                android:id="@+id/rbAvatar09_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar09" />

            <RadioButton
                android:id="@+id/rbAvatar10_AvatarIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:button="@drawable/rb_round_icon_avatar10" />
        </RadioGroup>


    </RadioGroup>

    <Button
        android:textColor="@color/color597084"
        android:id="@+id/btBack_AvatarIcon"
        style="@style/NormalButton"
        android:layout_marginStart="444dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_rrect_e6e6e6_184"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:textColor="@color/colorFFFFFF"
        android:id="@+id/btAllDone_AvatarIcon"
        style="@style/NormalButton"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="444dp"
        android:background="@drawable/btn_rrect_9d2227_184"
        android:text="@string/all_done"
        app:layout_constraintBottom_toBottomOf="@+id/btBack_AvatarIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btBack_AvatarIcon"
        app:layout_constraintTop_toTopOf="@+id/btBack_AvatarIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>