<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1120dp"
        android:layout_height="272dp"
        android:background="@drawable/bg_summary_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_v1_km"
            android:layout_width="224dp"
            android:layout_height="80dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="80sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_total_distance_unit"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:fontFamily="@font/hanzel_bold"
            android:text="km"
            android:textColor="@color/color597084"
            android:textSize="38sp"
            app:layout_constraintStart_toStartOf="@id/tv_v1_km"
            app:layout_constraintTop_toBottomOf="@id/tv_v1_km" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="24dp"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="DISTANCE"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_v1_km"
            app:layout_constraintTop_toBottomOf="@id/tv_v1_km" />


        <TextView
            tools:text="10:10:12"
            android:maxLength="8"
            android:id="@+id/tv_v1_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="416dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="TIME"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_v1_time" />

        <TextView
            tools:text="001"
            android:maxLength="5"
            android:id="@+id/tv_v1_avgspeed"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="146dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_time"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="6dp"
            android:textAllCaps="true"
            android:id="@+id/tv_total_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="RPM"
            android:textColor="@color/color597084"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/tv_v1_avgspeed"
            app:layout_constraintTop_toTopOf="@+id/tv_v1_avgspeed" />


        <TextView
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="AVG SPEED"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_avgspeed"
            app:layout_constraintTop_toBottomOf="@+id/tv_v1_avgspeed" />


        <!--第二排-->

        <TextView
            tools:text="001"
            android:text=""
            android:maxLength="5"
            android:id="@+id/tv_v1_avg_power"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="624dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="AVG POWER"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_avg_power"
            app:layout_constraintTop_toBottomOf="@+id/tv_v1_avg_power" />

        <TextView
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginStart="8dp"
            android:textColor="@color/color597084"
            android:textSize="25sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="@+id/tv_v1_avg_power"
            app:layout_constraintStart_toEndOf="@+id/tv_v1_avg_power"
            android:text="w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:maxLength="6"
            android:id="@+id/tv_v1_calories"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="146dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text=""
            tools:text="1234.1"
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_avg_power"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="KCAL"
            android:textColor="@color/color597084"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/tv_v1_calories"
            app:layout_constraintTop_toTopOf="@+id/tv_v1_calories" />


        <TextView
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="CALORIES"
            android:textAllCaps="true"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_v1_calories" />

        <!--第三排-->

        <TextView
            tools:text="001"
            android:maxLength="5"
            android:id="@+id/tv_v1_max_power"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="832dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginStart="8dp"
            android:textColor="@color/color597084"
            android:textSize="25sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="@+id/tv_v1_max_power"
            app:layout_constraintStart_toEndOf="@+id/tv_v1_max_power"
            android:text="w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:letterSpacing="0.14062"
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="MAX POWER"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_max_power"
            app:layout_constraintTop_toBottomOf="@+id/tv_v1_max_power" />

        <TextView
            tools:text="001"
            android:maxLength="5"
            android:id="@+id/tv_v1_avgmets"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="146dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_max_power"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="159dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text=""
            android:textColor="@color/color597084"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/tv_v1_avgmets"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="AVG METs"
            android:textAllCaps="true"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v1_avgmets"
            app:layout_constraintTop_toBottomOf="@+id/tv_v1_avgmets" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>