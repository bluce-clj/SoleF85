<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    tools:context=".engineer.ThreeFragment">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Restore Factory"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vv1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="112dp"
        android:background="@color/colorDEE2E6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:text="First Launch"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/vv1" />


    <Button
        android:id="@+id/btn_clear"
        style="@style/NormalButton"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:background="@drawable/btn_rrect_9d2227_288"
        android:text="Clear"
        android:textColor="@color/colorFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/vv1"
        app:layout_constraintEnd_toEndOf="@+id/sc_first_launch"
        app:layout_constraintTop_toTopOf="parent" />

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sc_first_launch"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_marginEnd="27dp"
        android:background="@color/colorDEE2E6"
        app:draggable="true"
        app:layout_constraintBottom_toTopOf="@+id/vv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vv1"
        app:position="0"
        app:radius="32dp"
        app:ripple="false"
        app:selectedBackground="@color/colorE4002B"
        app:selectedButtonRadius="32dp"
        app:selectionAnimationDuration="200">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="130dp"
            android:layout_height="64dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:lineSpacingExtra="1.5sp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="ON"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="130dp"
            android:layout_height="64dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:lineSpacingExtra="1.5sp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="OFF"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <View
        android:id="@+id/vv2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="224dp"
        android:background="@color/colorDEE2E6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Machine Type"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/vv3"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/vv2" />

    <com.dyaco.spiritbike.support.RelativeRadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/vv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vv2">

        <RadioButton
            android:clickable="false"
            android:id="@+id/radioButton1"
            android:layout_width="447dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rb_round_eng"
            android:button="@null"
            android:drawableStart="@drawable/icon_wifi_done"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:paddingStart="97dp"
            android:paddingEnd="45dp"
            android:text="XBU55ENT-UpRight Bike"
            android:textColor="@color/colorE4002B"
            android:textSize="25sp" />

        <RadioButton
            android:clickable="false"
            android:button="@null"
            android:background="@drawable/rb_round_eng"
            android:id="@+id/radioButton2"
            android:layout_width="447dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@+id/radioButton1"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="XBR55ENT–Recumbent Bike"
            android:textColor="@color/color597084"
            android:textSize="25sp" />

        <RadioButton
            android:clickable="false"
            android:button="@null"
            android:background="@drawable/rb_round_eng"
            android:id="@+id/radioButton3"
            android:layout_width="447dp"
            android:layout_height="80dp"
            android:layout_below="@+id/radioButton1"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="XE395ENT–Elliptical"
            android:textColor="@color/color597084"
            android:textSize="25sp" />

    </com.dyaco.spiritbike.support.RelativeRadioGroup>


    <View
        android:id="@+id/vv3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="454dp"
        android:background="@color/colorDEE2E6"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tttt4"
        android:fontFamily="@font/open_sans_semibold"
        android:text="BLE NAME"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/vv3"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:digits="@string/register_name_digits"
        android:maxLines="1"
        android:minLines="1"
        android:id="@+id/et_ble_name"
        android:padding="4dp"
        android:background="@drawable/panel_box_ed"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        android:text=""
        android:maxLength="10"
        android:layout_marginStart="42dp"
        app:layout_constraintStart_toEndOf="@+id/tttt4"
        app:layout_constraintBottom_toBottomOf="@+id/tttt4"
        app:layout_constraintTop_toTopOf="@+id/tttt4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:importantForAutofill="no" />

