<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_popup_down"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_close"
        android:contentDescription="@string/img"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/btn_round_close_e6e6e6_64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:contentDescription="@string/img"
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:src="@drawable/icon_attention"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/NormalTitleText"
        android:id="@+id/tv_ShowText"
        android:layout_height="wrap_content"
        android:layout_marginTop="352dp"
        android:text="@string/something_wrong"
        android:textColor="@color/color597084"
        android:fontFamily="@font/hanzel_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:id="@+id/tv_ShowText2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="421dp"
        android:text="No motor output signal"
        android:textColor="@color/color162735"
        android:fontFamily="@font/open_sans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/NormalButton"
        android:id="@+id/btn_support"
        android:text="SUPPORT"
        android:background="@drawable/btn_rrect_e6e6e6_288"
        android:textColor="@color/color597084"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>