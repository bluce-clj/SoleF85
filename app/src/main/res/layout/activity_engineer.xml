<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".engineer.EngineerActivity">

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btBack"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_round_back_e6e6e6_64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="52dp"
        android:text="Engineer Mode"
        style="@style/NormalTitleText"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/vll"/>

    <com.google.android.material.tabs.TabLayout
        app:tabMode="fixed"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="176dp"
        app:tabIndicatorHeight="4dp"
        app:tabMaxWidth="280dp"
        app:tabGravity="center"
        app:tabTextAppearance="@style/TabFontStyle"
        app:tabSelectedTextColor="@color/colorE4002B"
        app:tabIndicatorColor="@color/colorE4002B"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Function" />-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Service" />-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="244dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Factory Setting" />-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="176dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Calibration" />-->
    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/vll"
        android:background="@color/colorDEE2E6"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>