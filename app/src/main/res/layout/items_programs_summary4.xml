<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1120dp"
        android:layout_height="272dp"
        android:background="@drawable/bg_summary_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:letterSpacing="0.14062"
            android:layout_width="392dp"
            android:layout_height="24dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="HEART RATE PROFILE"
            android:textColor="@color/color597084"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_diagram_hr"
            android:scaleType="fitXY"
            android:src="@drawable/diagram_hill_level"
            android:layout_marginStart="104dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="496dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/tv_v4_avg_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="728dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:includeFontPadding="false"
            android:text="BPM"
            android:textColor="@color/color597084"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="@+id/tv_v4_avg_hr"
            app:layout_constraintStart_toEndOf="@+id/tv_v4_avg_hr" />

        <TextView
            android:textAllCaps="true"
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="Avg Heart Rate"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v4_avg_hr"
            app:layout_constraintTop_toBottomOf="@+id/tv_v4_avg_hr" />

        <TextView
            android:id="@+id/tv_v4_max_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="158dp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/color597084"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v4_avg_hr"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="BPM"
            android:textColor="@color/color597084"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="@+id/tv_v4_max_hr"
            app:layout_constraintStart_toEndOf="@+id/tv_v4_max_hr"/>


        <TextView
            android:textAllCaps="true"
            android:layout_width="184dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.14062"
            android:text="Max Heart rate"
            android:textColor="@color/colorB4BEC7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_v4_max_hr"
            app:layout_constraintTop_toBottomOf="@+id/tv_v4_max_hr" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>