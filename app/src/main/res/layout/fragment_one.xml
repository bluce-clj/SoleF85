<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".engineer.OneFragment">

    <TextView
        android:id="@+id/text1"
        android:text="Unit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sc_unit"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_marginEnd="27dp"
        android:background="@color/colorDEE2E6"
        app:draggable="true"
        app:ripple="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vv1"
        app:position="0"
        app:radius="32dp"
        app:selectedBackground="@color/colorE4002B"
        app:selectedButtonRadius="32dp"
        app:selectionAnimationDuration="200">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:lineSpacingExtra="1.5sp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:layout_width="130dp"
            android:layout_height="64dp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="IMPERIAL"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:lineSpacingExtra="1.5sp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:layout_width="130dp"
            android:layout_height="64dp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="METRIC"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <View
        android:id="@+id/vv1"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorDEE2E6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:id="@+id/text2"
        android:text="Odo"
        app:layout_constraintStart_toStartOf="@+id/text1"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/vvvv1"
        android:layout_marginStart="419dp"
        android:background="@color/colorB4BEC7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:layout_width="1dp"
        android:layout_height="64dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/color597084"
        android:text=""
        android:letterSpacing="0.07"
        android:textSize="32sp"
        android:fontFamily="@font/hanzel_bold"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_time_unit"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time_unit"
        android:textColor="@color/color597084"
        android:text="HOUR"
        android:letterSpacing="0.07"
        android:textSize="32sp"
        android:fontFamily="@font/hanzel_bold"
        android:layout_marginEnd="599dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/vvvv2"
        android:layout_marginStart="721dp"
        android:background="@color/colorB4BEC7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:layout_width="1dp"
        android:layout_height="64dp"/>

    <TextView
        android:id="@+id/tv_distance"
        android:textColor="@color/color597084"
        android:text=""
        android:letterSpacing="0.07"
        android:textSize="32sp"
        android:fontFamily="@font/hanzel_bold"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_distance_unit"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_distance_unit"
        android:textColor="@color/color597084"
        android:text="KM"
        android:letterSpacing="0.07"
        android:textSize="32sp"
        android:fontFamily="@font/hanzel_bold"
        android:layout_marginEnd="346dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_odo_reset"
        app:layout_constraintTop_toTopOf="@+id/vv1"
        app:layout_constraintBottom_toBottomOf="@+id/vv2"
        app:layout_constraintEnd_toEndOf="@+id/sc_unit"
        android:textColor="@color/colorFFFFFF"
        android:text="RESET"
        android:background="@drawable/btn_rrect_9d2227_288"
        style="@style/NormalButton"
        android:layout_width="260dp"
        android:layout_height="64dp"/>

    <View
        android:id="@+id/vv2"
        android:layout_marginTop="223dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorDEE2E6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@+id/vv2"
        app:layout_constraintBottom_toBottomOf="@+id/vv3"
        android:id="@+id/text3"
        android:text="Display Mode"
        app:layout_constraintStart_toStartOf="@+id/text1"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/rgggg"
        android:orientation="horizontal"
        android:layout_marginEnd="550dp"
        app:layout_constraintTop_toBottomOf="@+id/vv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb1"
            android:textColor="@color/color597084"
            android:textSize="28sp"
            android:text="8秒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:visibility="invisible"
            android:id="@+id/rb2"
            android:layout_marginStart="20dp"
            android:textColor="@color/color597084"
            android:textSize="28sp"
            android:text="2分鐘"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:visibility="invisible"
            android:id="@+id/rb3"
            android:layout_marginStart="20dp"
            android:textColor="@color/color597084"
            android:textSize="28sp"
            android:text="20分鐘"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rb4"
            android:checked="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/color597084"
            android:textSize="28sp"
            android:text="30分鐘"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sc_sleep"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_marginEnd="27dp"
        android:background="@color/colorDEE2E6"
        app:draggable="true"
        app:ripple="false"
        app:layout_constraintTop_toBottomOf="@+id/vv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vv3"
        app:position="0"
        app:radius="32dp"
        app:selectedBackground="@color/colorE4002B"
        app:selectedButtonRadius="32dp"
        app:selectionAnimationDuration="200">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:lineSpacingExtra="1.5sp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:layout_width="130dp"
            android:layout_height="64dp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="ON"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:lineSpacingExtra="1.5sp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:layout_width="130dp"
            android:layout_height="64dp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="OFF"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <View
        android:id="@+id/vv3"
        android:layout_marginTop="336dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorDEE2E6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@+id/vv3"
        app:layout_constraintBottom_toBottomOf="@+id/vv4"
        android:id="@+id/text4"
        android:text="Beep"
        app:layout_constraintStart_toStartOf="@+id/text1"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sc_beep"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_marginEnd="27dp"
        android:background="@color/colorDEE2E6"
        app:draggable="true"
        app:ripple="false"
        app:layout_constraintTop_toBottomOf="@+id/vv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vv4"
        app:position="0"
        app:radius="32dp"
        app:selectedBackground="@color/colorE4002B"
        app:selectedButtonRadius="32dp"
        app:selectionAnimationDuration="200">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:lineSpacingExtra="1.5sp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:layout_width="130dp"
            android:layout_height="64dp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="ON"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:lineSpacingExtra="1.5sp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.226"
            android:layout_width="130dp"
            android:layout_height="64dp"
            app:selectedTextColor="@color/colorFFFFFF"
            app:selectedTextStyle="bold"
            app:text="OFF"
            app:textColor="@color/color597084"
            app:textSize="16sp" />

    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <View
        android:id="@+id/vv4"
        android:layout_marginTop="447dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorDEE2E6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vv4"
        android:id="@+id/text5"
        android:text="Software Update"
        app:layout_constraintStart_toStartOf="@+id/text1"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/color597084"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_to_command"
        style="@style/NormalButton"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_marginEnd="627dp"
        android:background="@drawable/btn_rrect_9d2227_288"
        android:text="Command"
        android:textColor="@color/colorFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vv4"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:layout_marginEnd="327dp"
        android:id="@+id/btn_osOTA"
        app:layout_constraintTop_toBottomOf="@+id/vv4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorFFFFFF"
        android:text="OSOTA"
        android:background="@drawable/btn_rrect_9d2227_288"
        style="@style/NormalButton"
        android:layout_width="260dp"
        android:layout_height="64dp"/>

    <Button
        android:id="@+id/btn_update"
        app:layout_constraintTop_toBottomOf="@+id/vv4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sc_unit"
        android:textColor="@color/colorFFFFFF"
        android:text="USB"
        android:background="@drawable/btn_rrect_9d2227_288"
        style="@style/NormalButton"
        android:layout_width="260dp"
        android:layout_height="64dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
