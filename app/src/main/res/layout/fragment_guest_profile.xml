<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorF6F8F9"
    android:id="@+id/clListInfo_Profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.GuestProfileFragment">
    <ImageView
        android:id="@+id/iv_guest"
        android:src="@drawable/avatar_profile_guest"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="184dp"
        android:layout_height="184dp"/>
    <TextView
        android:textAllCaps="true"
        android:gravity="center"
        android:text="You donâ€™t have a profile yet"
        android:textColor="@color/color597084"
        android:fontFamily="@font/hanzel_bold"
        android:layout_marginTop="64dp"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_guest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="600dp"
        android:layout_height="48dp"/>

    <Button
        style="@style/NormalButton"
        android:layout_marginTop="160dp"
        android:id="@+id/btn_create"
        android:background="@drawable/btn_rrect_9d2227_184"
        android:text="Create"
        android:textColor="@color/colorFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/iv_guest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>